package chunk_questions;

import java.util.Arrays;
import java.util.List;
import java.util.stream.Collectors;
import java.util.stream.IntStream;

public class ChunkArrayStream {
    public static void main(String[] args) {
        // Assuming the input array is from 2 to 50
        int[] inputArray = IntStream.rangeClosed(2, 50).toArray();

        // Specify the chunk size
        int chunkSize = 3;

        // Create chunks using Stream API
        List<int[]> chunks = chunkArray(inputArray, chunkSize);

        // Display the chunks
        for (int i = 0; i < chunks.size(); i++) {
            System.out.println("Chunk " + (i + 1) + ": " + Arrays.toString(chunks.get(i)));
        }
    }

    private static List<int[]> chunkArray(int[] array, int chunkSize) {
        return IntStream.range(0, (array.length + chunkSize - 1) / chunkSize)
                .mapToObj(i -> Arrays.copyOfRange(array, i * chunkSize, Math.min((i + 1) * chunkSize, array.length)))
                .collect(Collectors.toList());
    }
}
