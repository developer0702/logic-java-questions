package trail;

import java.util.Arrays;
import java.util.List;
import java.util.Map;
import java.util.stream.Collectors;

public class VowelCountChar {

	public static void main(String[] args) {
		String str ="iajd2  9jash dkjai ooquUA HLJH";
		String lowerCase = str.toLowerCase();
//		System.out.println("vowels :");
		List<Character> vowels = Arrays.asList('a','e','i','o','u');
		Map<Character, Long> collect = lowerCase.chars().mapToObj(s->(char)s).filter(vowels::contains).collect(Collectors.groupingBy(s->s,Collectors.counting()));
		collect.forEach((vowel, ch) -> System.out.print("\nvowels : "+vowel+" = "+ch));
		
		
	}
}
