package chunk_questions;

import java.util.Arrays;
import java.util.stream.IntStream;

public class ChunkArrayStream {
    public static void main(String[] args) {
        int n = 50;
        int chunkSize = 3; // specify your chunk size

        // Generate an array from 2 to 50
        int[] originalArray = IntStream.rangeClosed(2, n).toArray();

        // Print in chunks using Stream API
        IntStream.range(0, (originalArray.length + chunkSize - 1) / chunkSize)
                .mapToObj(i -> Arrays.copyOfRange(originalArray, i * chunkSize, Math.min((i + 1) * chunkSize, originalArray.length)))
                .forEach(chunk -> System.out.println(Arrays.toString(chunk)));
    }
}
